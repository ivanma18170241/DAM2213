<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@android:color/holo_blue_dark"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txt_texto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintStart_toEndOf="@id/img_icon"
        app:layout_constraintTop_toTopOf="@id/img_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_texto2"/>

    <TextView
        android:id="@+id/txt_texto2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@id/img_icon"
        app:layout_constraintStart_toStartOf="@id/txt_texto"
        app:layout_constraintEnd_toEndOf="@id/txt_texto"
        app:layout_constraintTop_toBottomOf="@id/txt_texto"/>

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="0dp"
        android:layout_height="30px"
        android:layout_marginTop="60dp"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintTop_toBottomOf="@id/img_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_2"/>

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="0dp"
        android:layout_height="30px"
        android:background="@android:color/holo_green_light"
        app:layout_constraintTop_toTopOf="@id/txt_1"
        app:layout_constraintStart_toEndOf="@id/txt_1"
        app:layout_constraintEnd_toStartOf="@id/txt_3"/>

    <TextView
        android:id="@+id/txt_3"
        android:layout_width="0dp"
        android:layout_height="30px"
        android:background="@android:color/holo_purple"
        app:layout_constraintTop_toTopOf="@id/txt_2"
        app:layout_constraintStart_toEndOf="@id/txt_2"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>